#!/usr/bin/env bash
# Summary: Setup virtualenvwrapper into current shell.
#
# Usage: pyenv virtualenvwrapper_lazy

set -e
[ -n "$PYENV_DEBUG" ] && set -x

VIRTUALENVWRAPPER="$(pyenv-which virtualenvwrapper_lazy.sh)"

if [ -f "${VIRTUALENVWRAPPER}" ]; then
  echo "source \"${VIRTUALENVWRAPPER}\""
else
  echo "virtualenvwrapper not installed." 1>&2
  exit
fi
